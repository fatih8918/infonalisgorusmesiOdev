<faces-config version="2.0"
   xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="
      http://java.sun.com/xml/ns/javaee
      http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
      <application>
     	   <locale-config>
     	        <default-locale>tr</default-locale>
     	        <supported-locale>tr</supported-locale>
     	        <supported-locale>en</supported-locale>
     	   </locale-config>
	   <resource-bundle>
		<base-name>com.egitim.i18n.messages</base-name>
		<var>msg</var>
	   </resource-bundle>
	   <message-bundle>com.egitim.i18n.messages</message-bundle>
     </application>
     
     <navigation-rule>
      	<from-view-id>/addStudent.xhtml</from-view-id>
      	<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/listStudents.xhtml</to-view-id>
		</navigation-case>
     </navigation-rule>
     <navigation-rule>
      	<from-view-id>/listStudents.xhtml</from-view-id>
      	<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/listStudents.xhtml</to-view-id>
		</navigation-case>
     </navigation-rule>
     <navigation-rule>
      	<from-view-id>/dataTable.xhtml</from-view-id>
      	<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/dataTable.xhtml</to-view-id>
		</navigation-case>
     </navigation-rule>
     
</faces-config>